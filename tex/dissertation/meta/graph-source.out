function svgLink(svgElem, dataJoin, filterBy) {
    svgElem.append("g")
        .attr("class", "links")
        .selectAll(".links")
        .data(dataJoin)
        .enter()
            .filter(filterBy)
            .append("g")
            .attr("class", "edge")
            .selectAll("*")
            .data(function(d) { return d; })
            .enter()
                .append("polyline")
                .attr("stroke-width", function(d) { return Math.sqrt(d.value); })
                .each(function(d) {
                    item = d3.select(this).data([d]);
                    if (d["arrow"] != 0) {
                        item.attr("marker-mid", "url(#mid)");
                    }
                });
}

function svgNode(svgElem, dataJoin, filterBy) {
   svgElem.append("g")
        .attr("class", "nodes")
        .selectAll(".nodes")
        .data(dataJoin)
        .enter()
            .filter(filterBy)
            .append("circle")
            .attr("fill", function(d) { return color(d.group); })
            .call(d3.drag()
                .on("start", dragstarted)
                .on("drag", dragged)
                .on("end", dragended));
}

